@model List<PresupuestoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Presupuestos
    </div>
    <div class="card-body">
        <a asp-action="Agregar" asp-controller="Presupuesto" class="btn btn-success btn-sm">Agregar Nuevo</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Total</th>
                    <th>Fecha de Baja</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="@(item.FechaBaja.HasValue ? "background-color: lightcoral;" : "")">
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Email</td>
                        <td>@item.Total</td>
                        <td>@item.FechaBaja?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (!item.FechaBaja.HasValue)
                            {
                                <a asp-action="Editar" asp-controller="Presupuesto" class="btn btn-success btn-sm" asp-route-IdPresupuesto="@item.IdPresupuesto">Editar</a>
                            }
                            @if (!item.FechaBaja.HasValue)
                            {
                                <a asp-action="Eliminar" asp-controller="Presupuesto" class="btn btn-danger btn-sm" asp-route-IdPresupuesto="@item.IdPresupuesto">Eliminar</a>
                            }
                            @if (!item.FechaBaja.HasValue)
                            {
                                <a asp-action="Listar" asp-controller="Desperfecto" class="btn btn-primary btn-sm" asp-route-IdPresupuesto="@item.IdPresupuesto">Agregar Desperfecto</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

